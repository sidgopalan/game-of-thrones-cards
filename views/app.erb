<script>
	$(function(){
		gotApp = new Marionette.Application();
		gotApp.addRegions({
			nav:'div#nav-region',
			games:'div#games-region',
		});
		gotApp.addInitializer(function(options){
			var nav_view = new NavView();
			var games_view = new GamesView({collection:options.games});

			gotApp.nav.show(nav_view);
			gotApp.games.show(games_view);
		});

		var games = new GamesCollection([{'name':'hi'},{'name':'bob'}]);
//<%= games.values.map(&:state).to_json %>
		gotApp.start({games:games, });
	});

</script>

